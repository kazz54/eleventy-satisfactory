<!doctype html>
<html lang="{{ metadata.language }}">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">
  <meta name="generator" content="{{ eleventy.generator }}">
  <meta name="keywords" content="{{ tags }}">

  <style>{% include "node_modules/simpledotcss/simple.min.css" %}</style>

  <style>
  /* lora-700 - latin */
  @font-face {
    font-family: 'Lora';
    font-style: normal;
    font-weight: 700;
    src: local(''),
        url('{{ "/fonts/lora-v26-latin-700.woff2" | url }}') format('woff2'), /* Chrome 26+, Opera 23+, Firefox 39+ */
        url('{{ "/fonts/lora-v26-latin-700.woff" | url }}') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
  }
  </style>

  {% set cssoverrides %}
  {% include "css/index.css" %}
  {% endset %}

  <style>
    {{ cssoverrides | cssmin | safe }}
  </style>

  {% set cssprism %}
  {% include "css/prism-base16-monokai.dark.css" %}
  {% endset %}

  <style>
    {{ cssprism | cssmin | safe }}
  </style>

  {% set cssprismdiff %}
  {% include "css/prism-diff.css" %}
  {% endset %}

  <style>
    {{ cssprismdiff | cssmin | safe }}
  </style>

  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

  <meta property="og:title" content="{{ title or metadata.title }}"/>
  <meta property="og:url" content="{{ page.url }}" />
  <meta property="og:description" content="{{ description or renderData.description }}" />
  <meta property="og:image" content="{{ header.teaser or 'img/default.png' | url }}" />
  <meta property="og:type" content="article" />

</head>

<body>
  <header>
    <a href="{{ '/' | url }}"><site-title>{{ metadata.title }}</site-title></a>
  </header>
  <main>
    <h1><a href="">{%- if title %}{{ title }}{%- endif %}</a></h1>
    <p>{% if description %}{{ description }}{% endif %}</p>
    {{ content | safe }}
  </main>

  <footer>

    <ul class="externallinks">
        {%- for item in externallinks -%}
        <li><a href="{{ item.link }}">{{ item.text }}</a></li>&nbsp;&nbsp;&nbsp;
        {%- endfor -%}
    </ul>


    <p>&mdash; &copy; {% year %} {{ metadata.author.name }} &mdash;</p>

    <ul class="photostream">
        {%- for photo in flickrphotos -%}
        <li><a href="{{ photo.link }}"><img width="150" height="150" alt="thumbnail" src="{{ photo.img }}"></a></li>&nbsp;&nbsp;&nbsp;
        {%- endfor -%}
    </ul>


  </footer>

  <!-- Current page: {{ page.url | url }} -->
</body>

</html>
