<!doctype html>
<html lang="{{ metadata.language }}">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">
  <meta name="generator" content="{{ eleventy.generator }}">

  <style>{% include "node_modules/simpledotcss/simple.min.css" %}</style>

  {% set cssoverrides %}
  {% include "css/index.css" %}
  {% endset %}

  <style>
    {{ cssoverrides | cssmin | safe }}
  </style>

  {% set cssprism %}
  {% include "css/prism-base16-monokai.dark.css" %}
  {% endset %}

  <style>
    {{ cssprism | cssmin | safe }}
  </style>

  {% set cssprismdiff %}
  {% include "css/prism-diff.css" %}
  {% endset %}

  <style>
    {{ cssprismdiff | cssmin | safe }}
  </style>

  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
</head>

<body>
  <header>
    <a href="/"><site-title>{{ metadata.title }}</site-title></a>
  </header>
  <main>
    <h1><a href="">{%- if title %}{{ title }}{%- endif %}</a></h1>
    <p>{% if description %}{{ description }}{% endif %}</p>
    {{ content | safe }}
  </main>

  <footer>

    <ul class="photostream">
        {%- for photo in flickrphotos -%}
        <li><a href="{{ photo.link }}"><img width="150" height="150" alt="thumbnail" src="{{ photo.img }}"></a></li>&nbsp;&nbsp;&nbsp;
        {%- endfor -%}
    </ul>

    {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
    <nav>
      <ul>
        {%- for entry in collections.all | eleventyNavigation %}
        <li><a href="{{ entry.url | url }}">{{
            entry.title }}</a></li>
        {%- endfor %}
      </ul>
    </nav>
    <p><a href="https://simplecss.org">Simple.css</a> was created by <a href="https://kevq.uk">Kev Quirk</a> and is
      licensed under the MIT license.</p>
    <p>Starter template by <a href="https://www.lkhrs.com">Luke Harris</a>.</p>
  </footer>

  <!-- Current page: {{ page.url | url }} -->
</body>

</html>
