---
title: Page list
pagination:
  data: collections.all
  size: 20
  alias: entries
layout: layouts/home.njk
permalink: /page-list/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
---
<table>
  <thead>
    <tr>
      <th>URL</th>
      <th>Page Title</th>
    </tr>
  </thead>
  <tbody>
{%- for entry in entries %}
  <tr>
    <td><a href="{{ entry.url | url }}"><code>{{ entry.url | url }}</code></a></td>
    <td>{{ entry.data.title }}</td>
  </tr>
{%- endfor %}
  </tbody>
</table>


<nav aria-labelledby="pagination">
  <ol>
    <li>{% if pagination.href.previous %}<a href="{{ pagination.href.previous | url }}">⬅ Previous</a>{% else %}⬅ Previous{% endif %}</li>

    <li>{% if pagination.href.next %}<a href="{{ pagination.href.next | url }}">Next ➡</a>{% else %}Next ➡{% endif %}</li>
  </ol>
</nav>
